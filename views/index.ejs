<html lang="en">

<%- include('./partials/head.ejs') %>

<body>
    <header>
        <h1>Abbatek Blogs</h1>
        <%- include('./partials/nav.ejs') %>
    </header>

    <main>

        <section class="blogs content">
            <% if(blogs.length > 0) { 
                blogs.forEach((blog) => { %>
                    <div class="blog-container">
                        <div class="blog-img">
                            <img src="/img/dummy-article.jpg" alt="article">
                        </div>
                        <h3><%= blog.blogTitle %></h3>
                        <p><%= blog.blogSnippet %></p>
                        <a href="#">Read More</a>
                    </div>
                    
                <% })
            } else { %>
                <p>No blogs posted currently</p>

            <% }%>
        </section>
        
    </main>
    <footer>
        <%- include('./partials/footer.ejs') %>
    </footer>
    
</body>
</html>